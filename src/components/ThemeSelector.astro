---
import { Sun, Moon } from "@lucide/astro"
---

<div class="hidden lg:block">
  <label class="flex cursor-pointer gap-2 mt-1">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="18"
      height="18"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round">
      <circle cx="12" cy="12" r="5" />
      <path
        d="M12 1v2M12 21v2M4.2 4.2l1.4 1.4M18.4 18.4l1.4 1.4M1 12h2M21 12h2M4.2 19.8l1.4-1.4M18.4 5.6l1.4-1.4" />
    </svg>
    <input type="checkbox" value="winter" class="toggle theme-controller" />
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="18"
      height="18"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round">
      <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
    </svg>
  </label>
</div>

  <div class="lg:hidden">
    <label class="swap swap-rotate">
      <!-- this hidden checkbox controls the state -->
      <input
        type="checkbox"
        data-toggle-theme="nord,black"
        data-act-class="ACTIVECLASS"
      />
  
      <!-- sun icon for light mode -->
      <Sun class="swap-on" />
  
      <!-- moon icon for dark mode -->
      <Moon class="swap-off" />
    </label>
  </div>

  <script is:inline>
    const THEME_KEY = "theme";
    const DARK_THEME = "night";
    const LIGHT_THEME = "winter";
    
    // On initial loading, the selected theme is applied if saved data exists.
    const savedTheme = localStorage.getItem(THEME_KEY);
    if (savedTheme) {
      document.documentElement.setAttribute("data-theme", savedTheme);
      // Updated checkbox using a theme saved in local storage.
      document.querySelectorAll(".theme-controller").forEach((el) => {
        el.checked = savedTheme === DARK_THEME;
      });
    }
    
    // Detect changes of input with the class theme-controller.
    document.querySelectorAll(".theme-controller").forEach((el) => {
      el.addEventListener("change", (e) => {
        const newTheme = e.target.checked ? DARK_THEME : LIGHT_THEME;
        document.documentElement.setAttribute("data-theme", newTheme);
        localStorage.setItem(THEME_KEY, newTheme);
      });
    });
  </script>