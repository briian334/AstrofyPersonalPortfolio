---
import LangSelector from "./LangSelector.astro";
import ThemeSelector from "./ThemeSelector.astro";
---

<div
	class="bg-opacity-90 bg-base-200 text-base-content sticky top-0 z-30 flex h-16 w-full justify-center shadow-sm backdrop-blur transition-all duration-100 lg:hidden"
>
	<div class="navbar">
		<div class="navbar-start">
			<label for="my-drawer" class="btn btn-square btn-ghost">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 24 24"
					class="inline-block h-5 w-5 stroke-current"
					><path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M4 6h16M4 12h16M4 18h16"></path>
				</svg>
			</label>
		</div>

		<div class="navbar-end">
			<ThemeSelector />
			<LangSelector />
		</div>
	</div>
</div>
