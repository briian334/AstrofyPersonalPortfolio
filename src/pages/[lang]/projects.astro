---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HorizontalCard from "../../components/HorizontalCard.astro";
import type { Lang } from "../../types/lang.type";
import en from "../../i18n/en";
import es from "../../i18n/es";
import { getRecentProjects, projects } from "../../types/projects.type";

export async function getStaticPaths() {
	return projects.flatMap((project) => [
		{
			params: { id: project.id.toString(), lang: "es" },
		},
		{
			params: { id: project.id.toString(), lang: "en" },
		},
	]);
}

export const defaultLang = "/es";

const { lang } = Astro.params as { lang: Lang };
const translations: Record<Lang, typeof en> = { es, en };
const t = translations[lang];

const recentProjects = getRecentProjects(6); // Obtener los 6 m√°s recientes
---

<BaseLayout title="Projects" sideBarActiveItemID="projects" lang={lang}>
	<div class="mt-5">
		<div class="mb-5 w-full text-3xl font-bold">Todos mis proyectos</div>
	</div>
	<main class="container mx-auto px-4 py-8">
		<div class="grid grid-cols-1 gap-6">
			{recentProjects.map((project) => <HorizontalCard project={project} lang={lang} />)}
		</div>
	</main>
</BaseLayout>
